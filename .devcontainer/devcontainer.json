{
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        // code coverage page
        8000,
        // website
        3000
    ],
    "portsAttributes": {
        "8000": {
            "label": "Code Coverage Site"
        },
        "3000": {
            "label": "Project Documentation"
        }
    },
    "postCreateCommand": [
        "npm install && npm run setup-full"
    ],
    "waitFor": "postCreateCommand",
    "postAttachCommand": {
        "WebdriverIO Development Environment": "npm run watch",
        "Preview of the Documentation Page": "cd website && npm install && npm start -- --host 0.0.0.0",
        "Code Coverage Overview": "npm run test:unit && cd coverage && http-server -p 8000"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "editorconfig.editorconfig",
                "eamodio.gitlens"
            ]
        }
    }
}